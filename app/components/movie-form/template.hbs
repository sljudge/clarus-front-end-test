<form class={{this.styleNamespace}} {{on "submit" this.handleFormSubmit}}>
  <label data-test-title-label>
    <span>
      Title
    </span>
    <Input
      @type="text"
      @value={{this.title}}
      class="form-title"
      placeholder="Title..."
    />
  </label>

  <label data-test-description-label>
    <span>
      Description
    </span>
    <Input
      @type="text"
      @value={{this.description}}
      class="form-description"
      placeholder="Description..."
      required={{true}}
    />
  </label>

  <label data-test-rating-label>
    <span>
      Rating
    </span>
    <select {{on "change" this.updateRating}}>
      <option value="1" selected={{eq this.rating "1"}}>1</option>
      <option value="1.5" selected={{eq this.rating "1.5"}}>1.5</option>
      <option value="2" selected={{eq this.rating "2"}}>2</option>
      <option value="2.5" selected={{eq this.rating "2.5"}}>2.5</option>
      <option value="3" selected={{eq this.rating "3"}}>3</option>
      <option value="3.5" selected={{eq this.rating "3.5"}}>3.5</option>
      <option value="4" selected={{eq this.rating "4"}}>4</option>
      <option value="4.5" selected={{eq this.rating "4.5"}}>4.5</option>
      <option value="5" selected={{eq this.rating "5"}}>5</option>

    </select>
  </label>

  {{#if this.errorMessage}}
    <div class="error-message">
      {{this.errorMessage}}
    </div>
  {{/if}}

  <button type="submit" class="save-cta">
    {{this.ctaText}}
  </button>
  {{#if this.showDeleteCta}}
    <button type="button" class="delete-cta" {{on "click" this.deleteMovie}}>
      Delete movie
    </button>
  {{/if}}
</form>