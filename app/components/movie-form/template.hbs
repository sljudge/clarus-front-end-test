<form class={{this.styleNamespace}} {{on "submit" this.addMovie}}>
  <label data-test-title-label>
    <span>
      Title
    </span>
    <Input
      @type="text"
      @value={{this.title}}
      class="form-title"
      placeholder="Title..."
    />
  </label>

  <label data-test-description-label>
    <span>
      Description
    </span>
    <Input
      @type="text"
      @value={{this.description}}
      class="form-description"
      placeholder="Description..."
      required={{true}}
    />
  </label>

  <label data-test-rating-label>
    <span>
      Rating
    </span>
    <select>
      <option>0</option>
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
    </select>
  </label>

  {{#if this.errorMessage}}
    <div class="error-message">
      {{this.errorMessage}}
    </div>
  {{/if}}

  <button type="submit">
    {{this.ctaText}}
  </button>
</form>