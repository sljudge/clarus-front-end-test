<form class={{this.styleNamespace}} {{on 'submit' this.addMovie}}>
  <label>
    Title
    <Input
      @type='text'
      @value={{this.title}}
      class='form-title'
      placeholder='Title..'
    />
  </label>

  <label>
    Description
    <Input
      @type='text'
      @value={{this.description}}
      class='form-description'
      placeholder='Description..'
      required={{true}}
    />
  </label>

  {{#if this.errorMessage}}
    <div class='error-message'>
      {{this.errorMessage}}
    </div>
  {{/if}}

  <button type='submit'>
    Add Movie
  </button>
</form>